# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_macosx
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_macosx)
  updater_config = debug_macosx
  updater_exe_config = debug_macosx

else ifeq ($(config),debug_linux)
  updater_config = debug_linux
  updater_exe_config = debug_linux

else ifeq ($(config),debug_freebsd)
  updater_config = debug_freebsd
  updater_exe_config = debug_freebsd

else ifeq ($(config),release_macosx)
  updater_config = release_macosx
  updater_exe_config = release_macosx

else ifeq ($(config),release_linux)
  updater_config = release_linux
  updater_exe_config = release_linux

else ifeq ($(config),release_freebsd)
  updater_config = release_freebsd
  updater_exe_config = release_freebsd

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := updater updater-exe

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

updater:
ifneq (,$(updater_config))
	@echo "==== Building updater ($(updater_config)) ===="
	@${MAKE} --no-print-directory -C . -f updater.make config=$(updater_config)
endif

updater-exe: updater
ifneq (,$(updater_exe_config))
	@echo "==== Building updater-exe ($(updater_exe_config)) ===="
	@${MAKE} --no-print-directory -C . -f updater-exe.make config=$(updater_exe_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f updater.make clean
	@${MAKE} --no-print-directory -C . -f updater-exe.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_macosx"
	@echo "  debug_linux"
	@echo "  debug_freebsd"
	@echo "  release_macosx"
	@echo "  release_linux"
	@echo "  release_freebsd"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   updater"
	@echo "   updater-exe"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"