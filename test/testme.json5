{
    compiler: {
        c: {
            gcc: {
                flags: [
                    '-Wformat', '-Wformat-security', '-Wsign-compare', '-Wsign-conversion',
                    '-I../src',
                    '-I../src/osdep',
                    '-I../build/inc', '-L../build/bin'
                ],
                linux: {
                    flags: ['-Wl,-rpath,$ORIGIN/${CONFIGDIR}/../build/bin'],
                },
                macosx: {
                    flags: ['-Wl,-rpath,@executable_path/${CONFIGDIR}/../build/bin'],
                },
                libraries: ['updater', 'crypto', 'ssl'],
            },
            msvc: {
                flags: [
                    '-GR-', '-MDd', '-wd4100',
                    '-I../src',
                    '-I../src/osdep',
                    '/I../build/inc', 
                    '/LIBPATH:../build/bin',
                    '/I${ME_COM_OPENSSL_PATH}/include',
                    '/LIBPATH:${ME_COM_OPENSSL_PATH}/lib/VC/x64/MDd',
                    '/I${USERPROFILE}/vcpkg/installed/x64-windows/include',
                    '/LIBPATH:${USERPROFILE}/vcpkg/installed/x64-windows/lib',
                ],
                libraries: ['libupdater', 'libcrypto', 'libssl', 
                'ws2_32.lib', 'advapi32.lib', 'user32.lib', 'kernel32.lib', 'oldnames.lib', 'shell32.lib'],
            },
        },
    },
    execution: {
        timeout: 180, // 3 minutes in seconds
        parallel: true,
        workers: false,
    },
    patterns: {
        include: ['**/*.tst.sh', '**/*.tst.c'],  // Standard tests for all platforms
        macosx: {
            include: ['**/*.tst.macosx.c'],  // macOS-specific tests
        },
        windows: {
            include: ['**/*.tst.win.c'],  // Windows-specific tests
        },
    },
    environment: {
        default: {
            PATH: '../build/bin:${PATH}',
        },
        windows: {
            PATH: '../build/bin;C:/Program Files/OpenSSL;${USERPROFILE}/vcpkg/installed/x64-windows/bin;${PATH}',
            SSL_CERT_DIR: 'c:/Program Files/Git/mingw64/etc/ssl/certs/ca-bundle.crt',
        },
    },
    services: {
        environment: './env.sh',
        cleanup: './cleanup.sh',
    },
}
